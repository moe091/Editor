package com.moe.mygdxgame;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Input.Keys;
import com.badlogic.gdx.math.Vector3;

public class Input {
static boolean inputDown = false;
static boolean input2Down = false;
static Vector3 clickCoords = new Vector3();

	public static void process(WarScreen screen) {
		if (!inputDown) {
			if (Gdx.input.isTouched(0)) {
				inputDown = true;
				clickCoords.set(Gdx.input.getX(0), Gdx.input.getY(0), 0);
				screen.getClick(clickCoords);
			} else {
				
			}
		} else {
			if (Gdx.input.isTouched(0)) {
				//drag/hold
			} else {
				inputDown = false;
			}
		}
		
		if (!input2Down) {
			if (Gdx.input.isTouched(1)) {
				input2Down = true;
				clickCoords.set(Gdx.input.getX(1), Gdx.input.getY(1), 0);
				screen.getClick2(clickCoords);
			} else {
				
			}
		} else {
			if (Gdx.input.isTouched(1)) {
				//drag/hold
			} else {
				input2Down = false;
			}
		}
		
		if (Gdx.input.isKeyPressed(Keys.S)) {
			screen.playing = true;
		}
		if (Gdx.input.isKeyPressed(Keys.B)) {
			screen.playing = false;
		}
		if (Gdx.input.isKeyPressed(Keys.C)) {
			screen.clear(); 
		}
	}
}
