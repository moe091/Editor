package com.moe.mygdxgame;

public class CellArray {
int[][] cell;
int width;
int height;
int size;
	public CellArray(int size, int height, int width) {
		this.width = width;
		this.height = height;
		this.size = size;
		cell = new int[width][height];
		for (int x = 0; x < width; x++) {
			for (int y = 0; y < height; y++) {
				cell[x][y] = 0;
			}
		}
	}
	
	public void setCell(float x, float y, int num) {
		int xloc = (int) x / size;
		int yloc = (int) y / size;
		if (xloc < width && yloc < height) {
			cell[xloc][yloc] = num;
		}
	}
	
}
